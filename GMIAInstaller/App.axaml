<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:GMIAInstaller"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="GMIAInstaller.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <themes:BundledTheme BaseTheme="Dark" PrimaryColor="Orange" SecondaryColor="Amber" />
    </Application.Resources>
    <Application.Styles>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.Grey.Named.xaml" />
        <StyleInclude Source="avares://Material.Colors/Themes/MaterialDesignColor.Orange.Named.xaml" />
    </Application.Styles>
</Application>